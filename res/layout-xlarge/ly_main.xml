    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/imgTrasmisibles"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:src="@drawable/transmisibles" />

        <ImageView
            android:id="@+id/imgNoTrasmisibles"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:src="@drawable/no_transmisibles" />

        <ImageView
            android:id="@+id/imgExternas"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:src="@drawable/causa_externa" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/ImageGeneralidadesSivig"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:src="@drawable/conceptos_sivigila" />

        <ImageView
            android:id="@+id/imgAtras"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:src="@drawable/atras"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imgGeneralidades"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:src="@drawable/directorio" />

    </LinearLayout>

</LinearLayout>